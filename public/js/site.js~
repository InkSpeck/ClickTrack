//Javascript
$(document).ready(function() {
 
  $("#map").live("click", function(mouse) {
      var x = mouse.pageX - this.offsetLeft;
      var y = mouse.pageY - this.offsetTop;

      $("#map").append('<div class="mark" style="top:'+ y +'px;left:'+ x +'px;"></div>');
  });
      
  $("div.mark").live('mouseover mouseout', function(ShowMark) {
      if (ShowMark.type == 'mouseover') {
	  $(this).addClass("highlight");
      } else {
	  $(this).removeClass("highlight");
      }
  });

  $(".mark").live("click", function() {
      $(this).remove();
      return false;
  });

  $("#clearmap").bind("click", function() {
      $(".mark").remove();
  });

});
